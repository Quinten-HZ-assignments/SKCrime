generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  password    String
  permissions String[]
  token       String   @unique
  username    String   @unique
}

model Article {
  id                Int      @id @default(autoincrement())
  createdAt         DateTime @default(now())
  date              DateTime @default(now())
  url               String   @unique
  title             String
  description       String
  content           String?
  country           String?
  publisher         String?
  publisherInitials String?
  image             String?
  keywords          String[]
}
